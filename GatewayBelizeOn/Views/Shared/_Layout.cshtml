<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Belizeon - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top bon-navbar">
        <div class="container bon-header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("belizeOn", "Index", "Zitro", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Zitro", "Index", "Zitro")</li>
                </ul>
                @if ((string)(Session["userZitro"]) != null && (string)(Session["userZitro"]) != "")
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("LogOut", "Logout", "Zitro")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer class="navbar-fixed-bottom text-center" style="background:#182e49; color: #FFF;padding-top:1.5rem;">
            <p>&copy; @DateTime.Now.Year - BelizeOn Powered By Socias Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/beonglobal")
    @RenderSection("scripts", required: false)
</body>
</html>
